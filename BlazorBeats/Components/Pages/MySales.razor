@page "/my-sales"
@inject OrderService OrderService
@inject UserSession UserSession
@using BlazorBeats.Models

<style>
    .beats-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
    }

    .beat-card {
        background: white;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0,0,0,0.1);
        cursor: pointer;
        transition: box-shadow 0.3s ease;
    }

        .beat-card:hover {
            box-shadow: 0 0 12px rgba(0,0,0,0.25);
        }

</style>

<h2 class="text-xl font-bold mb-4">Мои продажи</h2>

@if (!UserSession.IsAuthenticated)
{
    <p class="text-red-600">Пожалуйста, авторизуйтесь для просмотра продаж.</p>
}
else if (orders == null)
{
    <p>Загрузка...</p>
}
else if (orders.Count == 0)
{
    <p>Ваши биты еще не были проданы.</p>
}
else
{
    <div class="beats-list">
        @foreach (var order in orders)
        {
            var beat = order.Beat;

            <div class="beat-card">
                <img src="@beat.ImagePath" alt="@beat.Title" style="width: 100%; height: 120px; object-fit: cover; border-radius: 6px;" />
                <h3>@beat.Title</h3>
                <p><strong>Лицензия:</strong> @order.License.Type</p>
                <p><strong>Цена:</strong> $@order.License.Price</p>
                <p><strong>Дата:</strong> @order.CreatedAt.ToShortDateString()</p>
            </div>
        }
    </div>
}

@code {
    private List<Order>? orders;

    protected override async Task OnInitializedAsync()
    {
        if (UserSession.IsAuthenticated)
        {
            orders = await OrderService.GetOrdersBySellerIdAsync(UserSession.CurrentUser !.Id);
        }
    }
}