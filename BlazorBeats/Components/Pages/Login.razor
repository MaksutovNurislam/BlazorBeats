@page "/login"
@inject AuthService AuthService
@inject NavigationManager Nav
@inject UserSession Session
@using BlazorBeats.Components.Layout
@layout EmptyLayout


<style>
    .form-container {
        max-width: 350px;
        margin: 80px auto;
        padding: 25px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
    }

    h3 {
        margin-bottom: 20px;
        color: #34495e;
        text-align: center;
    }

    input[type="email"], input[type="password"] {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 15px;
        box-sizing: border-box;
    }

    button[type="submit"] {
        width: auto;
        background-color: #27ae60;
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-right: 10px;
    }

        button[type="submit"]:hover {
            background-color: #1e8449;
        }

    .login-actions {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
        gap: 10px;
        flex-wrap: wrap;
    }

    .register-text {
        font-size: 14px;
        color: #34495e;
    }

    .register-link {
        font-size: 14px;
        color: #2980b9;
        cursor: pointer;
        text-decoration: underline;
    }

        .register-link:hover {
            color: #1c5980;
        }

    p.error-message {
        color: #e74c3c;
        font-weight: bold;
        margin-top: 10px;
        text-align: center;
    }
</style>

<div class="form-container">
    <h3>Вход</h3>

    <EditForm Model="@loginModel" OnValidSubmit="SubmitLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <InputText @bind-Value="loginModel.Email" type="email" placeholder="Email" />
        <InputText @bind-Value="loginModel.Password" type="password" placeholder="Пароль" />

        <div class="login-actions">
            <button type="submit">Войти</button>
            <span class="register-text">Нет аккаунта? </span>
            <span class="register-link" @onclick="NavigateToRegister">Создай его</span>
        </div>
    </EditForm>

    @if (!string.IsNullOrEmpty(error))
    {
        <p class="error-message">@error</p>
    }
</div>

@code {
    private LoginModel loginModel = new();
    private string? error;

    private async Task SubmitLogin()
    {
        var user = await AuthService.LoginAsync(loginModel.Email, loginModel.Password);

        if (user == null)
        {
            error = "Неверный email или пароль.";
            return;
        }

        // Проверка роли
        if (user.Role != "User")
        {
            Session.CurrentUser = new User
                {
                    Email = user.Email,
                    Role = user.Role
                };

            Nav.NavigateTo("/dashboardadmin");
            return;
        }

        // Обычный пользователь
        Session.CurrentUser = user;
        Nav.NavigateTo("/dashboard");
    }


    private void NavigateToRegister()
    {
        Nav.NavigateTo("/register");
    }

    public class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }
}

